rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Films collection - Public read access, no public writes
    match /filmes/{filme} {
      // Anyone can read film data
      allow read: if true;

      // Only allow writes from authenticated sources (Cloud Functions, etc.)
      // Public users cannot write to the database
      allow write: if false;
    }

    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
